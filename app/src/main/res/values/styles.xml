<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlideToActView">
        <item name="text">SlideToActView</item>
        <item name="text_size">@dimen/slidetoact_default_text_size</item>
        <item name="area_margin">@dimen/slidetoact_default_area_margin</item>
        <item name="inner_color">?android:colorBackground</item>
        <item name="outer_color">@color/colorPrimary</item>
        <item name="slider_locked">false</item>
    </style>

    <style name="forgot_style">
        <item name="android:width">0dp</item>
        <item name="android:height">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/lable</item>
    </style>

    <style name="lable_style">
        <item name="android:width">0dp</item>
        <item name="android:height">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/lable</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SlideToActView.Example">
        <item name="android:elevation">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
